'use strict';
module.exports = (sequelize, DataTypes) => {
  const Exhibition = sequelize.define('Exhibition', {
    exhibitionID: {
      type: DataTypes.INTEGER,
      primaryKey: true,
      autoIncrement: true,
      allowNull: false
    },
    title: {
      type: DataTypes.STRING(50),
      allowNull: true
    },
    startDate: {
      type: DataTypes.DATE,
      allowNull: false
    },
    endDate: {
      type: DataTypes.DATE,
      allowNull: false
    },
    locationID: {
      type: DataTypes.INTEGER,
      allowNull: false
    },
    createdAt: {
      type: DataTypes.DATE,
      allowNull: true,
      defaultValue: DataTypes.NOW
    },
    createdBy: {
      type: DataTypes.STRING(25),
      allowNull: true
    },
    updatedAt: {
      type: DataTypes.DATE,
      allowNull: true,
      defaultValue: DataTypes.NOW,
      onUpdate: DataTypes.NOW
    },
    updatedBy: {
      type: DataTypes.STRING(25),
      allowNull: true
    },
    artist: {
      type: DataTypes.STRING(30),
      allowNull: true
    }
  }, {
    tableName: 'exhibition',
    timestamps: false
  });

  Exhibition.associate = function(models) {
    // Associations
    Exhibition.belongsTo(models.Location, {
      foreignKey: 'locationID',
      as: 'location'
    });
  };

  return Exhibition;
};
